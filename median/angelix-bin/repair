#!/bin/bash

[ $# -lt 3 ] && echo "Usage: $0 oracle tests assert [extra_angelix_args]" && exit 1

oracle=$1
tests=$2
assert=$3
shift 3

angelix src median.c \
    $oracle $tests \
    --assert $assert \
    --verbose \
    --synthesis-levels \
        alternatives \
        integer-constants \
        boolean-constants \
        variables \
        basic-arithmetic \
        basic-logic \
        basic-inequalities \
        extended-arithmetic \
        extended-logic \
        extended-inequalities \
        mixed-conditional \
        conditional-arithmetic \
    $@
